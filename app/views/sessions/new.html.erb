<h1>登录</h1>

<%= form_for :session, url: sessions_path, method: :post, html: { class: 'form-horizaontal', id: "user_form" } do |f| %>

  <div class="form-group">
    <div class="col-lg-12">邮箱 *</div>
    <div class="col-lg-12">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-12">密码 *</div>
    <div class="col-lg-12">
      <%= f.password_field :password, class: "form-control", id: "js-pwd" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-12">
      <a href="<%= new_user_path %>">注册</a>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.submit "登录", class: "btn btn-primary" %>
    </div>
  </div>

<% end -%>